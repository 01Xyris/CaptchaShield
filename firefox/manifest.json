{
  "manifest_version": 2,
  "name": "CaptchaShield: Anti-Deception Guard",
  "version": "1.4",
  "description": "Protects against fake CAPTCHAs, malicious behaviors, and prevents clipboard hijacking on websites.",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "CaptchaShield",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["clipboard-override.js"],
  "browser_specific_settings": {
    "gecko": {
      "id": "01xyris@proton.me",
      "strict_min_version": "58.0"
    }
  }
}
