{
  "manifest_version": 3,
  "name": "CaptchaShield: Anti-Deception Guard",
  "version": "1.4",
  "description": "Protects against fake CAPTCHAs, malicious behaviors, and prevents clipboard hijacking on websites.",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "CaptchaShield",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["clipboard-override.js"],
      "matches": ["<all_urls>"]
    }
  ]
  
}